        "url": "https://github.com/sherpa1/typescript-project-bootstrap/issues"
    },
    "homepage": "https://github.com/sherpa1/typescript-project-bootstrap#readme",
    "dependencies": {
        "@types/jest": "^29.1.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "typescript": "^4.8.4"
    },
    "devDependencies": {
        "nodemon": "^2.0.20",
        "jest": "^29.1.2"
    }
}